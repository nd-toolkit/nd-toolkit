{
  "type": "module",
  "repository": "github:nd-toolkit/ndk-source",
  "license": "Unlicense",
  "scripts": {
    "node": "node --experimental-modules",
    "eslint": "eslint . --max-warnings 0",
    "eslintcc": "eslintcc . --greater-than C --show-rules --average",
    "link-for-test": "npm run node bin/link-for-test.js",
    "test": "(nyc node test || node test) && nyc report -r=text && nyc check-coverage",
    "postinstall": "npm run link-for-test"
  },
  "dependencies": {
    "@nd-toolkit/eslint-config": "latest",
    "@nd-toolkit/ci-cd": "latest",
    "eslint": "latest",
    "eslintcc": "latest",
    "nyc": "latest"
  },
  "nyc": {
    "all": true,
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100,
    "exclude": [
      "build",
      "!**/node_modules/@ndk/"
    ],
    "reporter": [
      "lcovonly"
    ],
    "temp-dir": "./build/nyc_output",
    "report-dir": "./build/coverage"
  }
}