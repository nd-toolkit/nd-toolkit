{
  "repository": "github:nd-toolkit/ndk-source",
  "license": "Unlicense",
  "scripts": {
    "eslint": "eslint . --max-warnings 0",
    "eslintcc": "eslintcc . --greater-than C --show-rules --average",
    "test": "node test",
    "link-for-test": "ndk-ci-cd link-for-test @ndk test",
    "test-and-coverage": "(nyc node test || node test) && nyc report -r=text && nyc check-coverage",
    "coverage-html": "nyc -r=html node test"
  },
  "dependencies": {
    "@nd-toolkit/eslint-config": "latest",
    "@nd-toolkit/ci-cd": "latest",
    "eslint": "latest",
    "eslintcc": "latest",
    "nyc": "latest"
  },
  "eslintIgnore": ["test/node_modules"],
  "nyc": {
    "all": true,
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100,
    "exclude": [
      "bin",
      "build"
    ],
    "reporter": [
      "lcovonly"
    ],
    "temp-dir": "./build/nyc_output",
    "report-dir": "./build/coverage"
  }
}