{
  "repository": "github:nd-toolkit/ndk-source",
  "license": "Unlicense",
  "scripts": {
    "eslint": "eslint . --max-warnings 0",
    "eslintcc": "eslintcc . --greater-than C --show-rules",
    "link-for-test": "node bin/link-node-module src/@ndk test src/@ndk src",
    "link-for-test-real": "ndk-ci-cd link-for-test src/@ndk test src/@ndk src",
    "test": "node test",
    "coverage": "(nyc node test || node test) && (nyc check-coverage || nyc report -r=text && nyc check-coverage)",
    "coverage-html": "nyc -r=html node test",
    "build": "node bin/build-multi-package src/multi-package.json",
    "build-real": "ndk-ci-cd build-multi-package multi-package.json"
  },
  "dependencies": {
    "@nd-toolkit/ci-cd": "latest",
    "@nd-toolkit/eslint-config": "latest",
    "eslint": "latest",
    "eslintcc": "latest",
    "nyc": "latest"
  },
  "eslintIgnore": [
    "bin/node_modules",
    "src/node_modules",
    "test/node_modules"
  ],
  "nyc": {
    "all": true,
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100,
    "exclude": [
      "bin",
      "build",
      "test/index.js",
      "test/mem.js"
    ],
    "reporter": [
      "lcovonly"
    ],
    "temp-dir": "./build/nyc_output",
    "report-dir": "./build/coverage"
  }
}